# Database
DATABASE_URL="postgresql://username:password@localhost:5432/mymenus?schema=public"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_EXPIRES_IN="7d"

# Microservices Ports
API_PORT=5000
SOCKET_PORT=5001
JOBS_PORT=5002
NODE_ENV="development"

# CORS
FRONTEND_URL="http://localhost:3000"
# For network access, replace with your local IP
# FRONTEND_URL="http://192.168.1.100:3000"

# Cloudinary Storage
CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/webp"

# Rate Limiting
# Auth routes (login/register) - 5 requests per minute
AUTH_RATE_LIMIT_WINDOW_MS=60000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# General routes - 200 requests per 15 minutes
GENERAL_RATE_LIMIT_WINDOW_MS=900000
GENERAL_RATE_LIMIT_MAX_REQUESTS=200

# Public routes - 1000 requests per 15 minutes
PUBLIC_RATE_LIMIT_WINDOW_MS=900000
PUBLIC_RATE_LIMIT_MAX_REQUESTS=1000

# Socket service base URL (used by API to emit real-time updates)
# If not set, API will fallback to SOCKET_PORT on localhost
SOCKET_SERVICE_URL="http://localhost:5001"

# Redis connection URL for inter-service pub/sub (optional for now)
REDIS_URL="redis://localhost:6379"

# Resend email API key (used when enabling email sending)
RESEND_API_KEY="your-resend-api-key"
EMAIL_FROM="QMenus <noreply@yourdomain.com>"

# Order tracking - 30 requests per minute
ORDER_TRACKING_RATE_LIMIT_WINDOW_MS=60000
ORDER_TRACKING_RATE_LIMIT_MAX_REQUESTS=30

# Optional: Skip email verification in production
# SKIP_EMAIL_VERIFICATION="true"

# Docker: Database Initialization
# Set to "true" or "1" to run migrations and seeding on first container start
# This will create admin user (admin@gmail.com / admin123) and all plans
RUN_DB_INIT="true"

# Docker: Wait for PostgreSQL
# Set to "true" to wait for postgres service (docker-compose only)
# Set to "false" for external databases (Render, etc.)
WAIT_FOR_POSTGRES="true"